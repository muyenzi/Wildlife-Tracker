{{#partial "content"}}

    <div class="row">
        <div class="col col-sm-6 form-left">
            <h3>Add Sighting</h3>
            <br/>
            <form action="/new-sighting" method="post" >
                <div class="form-group">
                    <label for="animalId">animal Id</label>
                    <input class="form-control" type="text" id="animalId" name="animalId" placeholder="animalId"/>
                </div>
                <div class="form-group">
                    <label for="sightLocation">Sighting Location</label>
                    <input class="form-control" type="text" id="sightLocation" name="sightLocation" placeholder="sighting Location"/>
                </div>
                <div class="form-group">
                    <label for="rangerName">Ranger Name </label>
                    <input class="form-control" type="text" id="rangerName" name="rangerName" placeholder="rangerName"/>
                </div>

                <button type="submit" class="btn btn-primary">Add Sighting</button>
            </form>
        </div>
        <div class="col col-sm-6">

        </div>
    </div>
{{/partial}}

