{{#partial "content"}}
    <style>
form{
top:50%;
color:white;
}
body{
   background-image:url("https://3.bp.blogspot.com/-zXgflgKBw-s/T-lf6ZSpmbI/AAAAAAAABjI/AbepKthPt5I/s1600/Animal%20HD%20Wallpapers.jpg");
       background-repeat:no-repeat;
       background-size:cover;
       text-align:center;
}
    </style><br><br><br><br><br>
    <h2>Add Animal</h2><hr>
<div class="row">
    <div class="col col-sm-6 form-left">
        <br/>
        <form action="/new-animals" method="post" >
            <div class="form-group">
                <label for="animalName">Name of an Animal</label><br>
                <input class="form-control" type="text" id="animalName" name="animalName" placeholder="Animal Name"/>
            </div>

            <input type="checkbox" name="strange" value="yes"/>
            <label for="strange">Is the Species Endangered?</label>

            <div class="form-group">
                <label for="health">Health</label><br>
                <select class="mdb-select md-form" name="health" STYLE="width:100%;height:40px;border-radius:4px">
                    <option value="" disabled selected>Choose Health Condition</option>
                    <option value="Healthy">Healthy</option>
                    <option value="Okay">Okay</option>
                    <option value="Ill">Ill</option>
                </select>
            </div>

            <div class="form-group">
                <label for="age"> Age </label><br>
                <select class="mdb-select md-form" name="age" STYLE="width:100%;height:40px;border-radius:4px"><br>
                    <option value="" disabled selected>Choose Age</option>
                    <option value="Newborn">Newborn</option>
                    <option value="Young">Young</option>
                    <option value="Adult">Adult</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Add Animal</button>
        </form>
    </div>
</div>
{{/partial}}

{{>layout.hbs}}